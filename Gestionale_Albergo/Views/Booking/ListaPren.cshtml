@model IEnumerable<Gestionale_Albergo.Models.Prenotazioni>

@{
    ViewBag.Title = "ListaPren";
}

<h2>Prenotazioni</h2>

@if(ViewBag.msgerror != null)
            {
                <div class="alert alert-warning">@ViewBag.msgerror</div>
            }

<p>
    @Html.ActionLink("Inserisci Prenotazione", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPrenotazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrCamera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Acconto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Saldo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPrenotazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NrCamera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Acconto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Saldo)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id = item.IdPrenotazione }) |
            @Html.ActionLink("Dettagli", "Details", new { id = item.IdPrenotazione }) |
            @Html.ActionLink("Cancella", "Delete", new { id = item.IdPrenotazione })
        </td>
    </tr>
}

</table>
