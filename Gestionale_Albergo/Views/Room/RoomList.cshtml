@model IEnumerable<Gestionale_Albergo.Models.Camere>

@{
    ViewBag.Title = "RoomList";
}

@if (ViewBag.msgerror != null)
{
    <div class="alert alert-warning">@ViewBag.msgerror</div>
}


<p>
    @Html.ActionLink("Inserisci una nuova camera", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NrCamera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NrCamera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.NrCamera }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NrCamera })
            </td>
        </tr>
    }

</table>
